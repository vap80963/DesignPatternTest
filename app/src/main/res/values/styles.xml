<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="AppTheme.Base">
    </style>

    <style name="AppTheme.Base" parent="Theme.AppCompat.Light">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/app_main</item>
        <item name="colorPrimaryDark">@color/app_main</item>
        <item name="android:windowBackground">@color/window_bg</item>
        <item name="android:textColorPrimary">@color/app_black</item>
        <item name="android:textColorSecondary">@color/app_black</item>
        <item name="actionMenuTextColor">@color/app_black</item>
        <item name="colorControlNormal">@color/app_base_color</item>
        <item name="colorControlActivated">@color/app_base_color</item>
        <item name="colorControlHighlight">@color/transparent</item>
    </style>

    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">normal</item>
    </style>

</resources>
