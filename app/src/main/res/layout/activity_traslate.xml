<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.admin.myapplication.customview.animator.TraslateActivity">


    <android.support.constraint.ConstraintLayout
        android:id="@+id/imageView_cl"
        android:layout_width="0dp"
        android:layout_height="220dp"
        android:background="@color/white"
        android:layout_marginTop="9dp"
        android:cropToPadding="false"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1"
        >

        <ImageView
            android:id="@+id/step1_img"
            android:layout_width="0dp"
            android:layout_height="130dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:src="@drawable/img_step1"
            android:scaleType="fitXY"
            tools:layout_constraintRight_creator="1"
            android:layout_marginStart="62dp"
            android:layout_marginEnd="62dp"
            tools:layout_constraintLeft_creator="1"
            android:layout_marginLeft="62dp"
            android:layout_marginRight="62dp"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp"
            app:layout_constraintVertical_bias="0.851"/>


        <ImageView
            android:id="@+id/step1_hand_img"
            android:layout_width="70dp"
            android:layout_height="66dp"
            android:src="@drawable/img_step1_hand"
            android:scaleType="fitXY"
            tools:layout_constraintTop_creator="1"
            tools:layout_constraintRight_creator="1"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp"
            app:layout_constraintRight_toRightOf="@+id/step1_img"
            app:layout_constraintBottom_toBottomOf="@+id/step1_img"
            android:layout_marginBottom="8dp"
            app:layout_constraintVertical_bias="0.0"
            />

    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>
